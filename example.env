# Server Configuration
PORT=8143

# HTTP Client Configuration
MAX_IDLE_CONNS=50
MAX_IDLE_CONNS_PER_HOST=50
IDLE_CONN_TIMEOUT_SECONDS=180
REQUEST_TIMEOUT_SECONDS=300
STREAMING_TIMEOUT_SECONDS=900
READ_TIMEOUT_SECONDS=45

# Logging Configuration
DEBUG=false

# Streaming Architecture Configuration
# Set to "true" to enable the new streaming architecture
ENABLE_NEW_STREAMING_ARCHITECTURE=false

# Percentage of requests to route to new architecture (0-100)
# Used for gradual rollout when ENABLE_NEW_STREAMING_ARCHITECTURE is not set to "true"
NEW_STREAMING_ROLLOUT_PERCENTAGE=0

# Streaming error handling configuration
STREAMING_MAX_ERRORS=10
STREAMING_BUFFER_SIZE=4096